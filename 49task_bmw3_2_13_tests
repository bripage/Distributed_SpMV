module load ompi/2.0.1-gcc-6.2.0

echo "Bash version ${BASH_VERSION}..."
echo "13 tasks per node"
for i in {1..8..1}
  do 
	echo "$i threads per task"
        for j in {0..50..1}
          do 
        	mpirun -np 49 -npernode 13 ./main -lm ../sample_matrices/bmw3_2.mtx --omp-threads $i --major-order col --distribution-method splitmatrix
          done
  done
