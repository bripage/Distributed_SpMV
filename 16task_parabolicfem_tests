module load hpx/4.0.0

echo "Bash version ${BASH_VERSION}..."
for i in {1..16..1}
  do 
       
            echo "$j threads per task"
            
            for k in {0.2..1}
                do 
                    mpirun -np 16 -npernode $i ./main -lm ../sample_matrices/parabolic_fem.mtx --omp-threads 1 --major-order col --distribution-method splitmatrix
                done
      
 done
