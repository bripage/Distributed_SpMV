module load ompi/2.0.1-gcc-6.2.0

echo "2 tasks per node"
for i in {1..8..1}
  do 
	echo "$i threads per task"
        for k in {0..20..1}
          do 
        	mpirun -np 64 -npernode 2 ./main -lm ../sample_matrices/nd24k_expanded.mtx --omp-threads $i --major-order col --distribution-method splitmatrix
          done
  done

